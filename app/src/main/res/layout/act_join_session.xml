<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Activity.JoinSessionAct">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edSessionToken"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_boarder"
            android:gravity="center"
            android:hint="Enter SESSION Token here ..."
            android:padding="8dp"
            android:scrollbars="vertical" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSessionTokenClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:text="Clear" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edToken"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_boarder"
            android:gravity="center"
            android:hint="Enter Token here ..."
            android:padding="8dp"
            android:scrollbars="vertical" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnTokenClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:text="Clear" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Join Session" />


    </LinearLayout>

</ScrollView>